<% title "профиль #{@user.login}" %>
<%- model_class = @user.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => yield(:title) %></h1>
</div>
<div id="user-info" class="well">
  <a href="#" class="thumbnail" id="user-photo">
    <%= gravatar_for @user %>
  </a>
  <div class="p-data">
    <div id="user-login"><%= @user.login %></div>
    <div id="user-name"><%= @user.name %></div>
    <div id="user-email"><%= @user.email %></div>
    <div id="user-department">Информационные системы</div>
  </div>
            <hr style="width: 100%; margin-top: 80px">
            <div class="free-days">
                  <div id="free-days-count">
                      10
                  </div>
                  <div id="free-days-label">
                      Свободных дней
                  </div>
              </div>
              <hr>
              <div class="plain-days">
                  7
              </div>
              <div class="plain-days-label">
                  Запланировано
              </div>
              <hr>
          </div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
